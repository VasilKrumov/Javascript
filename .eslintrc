{
    "extends": [
        "react-app",
        "prettier",
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:import/typescript"
    ],
    "rules": {
        "no-console": 0,
        "react/prop-types": 0,
        "prettier/prettier": [
            "error",
            {
                "trailingComma": "es5",
                "singleQuote": true,
                "printWidth": 120,
                "tabWidth": 4,
                "semi": false,
                "endOfLine": "auto"
            }
        ]
    },
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "plugins": [
        "react",
        "react-hooks",
        "prettier",
        "@typescript-eslint"
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        },
        "warnOnUnsupportedTypeScriptVersion": true
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".jsx",
                    ".ts",
                    ".tsx"
                ]
            }
        }
    }
}